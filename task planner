<script>
/* AUTH (LOCAL MOCK) */
function login() {
  localStorage.setItem("auth", "true");
  document.getElementById("auth").style.display = "none";
  document.getElementById("app").style.display = "flex";
}
if (localStorage.getItem("auth")) login();

/* COURSES */
const courses = [
  ["üß†","DSA"],["üñ•Ô∏è","OS"],["üóÑÔ∏è","DBMS"],["üåê","Networks"],
  ["ü§ñ","AI"],["üí°","Web Dev"],["‚öôÔ∏è","Compilers"]
];
document.getElementById("courses").innerHTML =
  courses.map(c=>`<div class="course"><span>${c[0]}</span>${c[1]}</div>`).join("");

/* CODING TRACKER */
let solved = 3, total = 5;
document.getElementById("progress").style.width = (solved/total*100)+"%";
document.getElementById("progressText").innerText =
  `${solved} / ${total} problems solved`;

/* TODO */
let todos = JSON.parse(localStorage.getItem("todos")||"[]");
function renderTodos() {
  const ul = document.getElementById("todoList");
  ul.innerHTML = "";
  todos.forEach((t,i)=>{
    ul.innerHTML += `<li onclick="removeTodo(${i})">${t} ‚ùå</li>`;
  });
  localStorage.setItem("todos", JSON.stringify(todos));
}
function addTodo(e){
  if(e.key==="Enter"){
    todos.push(e.target.value);
    e.target.value="";
    renderTodos();
  }
}
function removeTodo(i){
  todos.splice(i,1);
  renderTodos();
}
renderTodos();

/* PROJECTS */
const projects = [
  ["LeetCode Tracker","React + Node","In Progress"],
  ["Chat App","WebSocket","Completed"],
  ["OS Scheduler","C++","Planned"]
];
document.getElementById("projects").innerHTML =
  projects.map(p=>`
    <div class="project">
      <b>${p[0]}</b>
      <div style="font-size:12px;color:var(--text-dim)">${p[1]}</div>
      <div style="color:var(--accent);font-size:12px">${p[2]}</div>
    </div>`).join("");

/* GITHUB FETCH */
function loadGitHub(user){
  fetch(`https://api.github.com/users/${user}`)
    .then(r=>r.json())
    .then(d=>{
      document.getElementById("githubData").innerText =
        `Repos: ${d.public_repos} ‚Ä¢ Followers: ${d.followers}`;
    })
    .catch(()=>document.getElementById("githubData").innerText="User not found");
}
</script>

